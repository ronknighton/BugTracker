<!-- Instructions Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg custom-modal">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">EMS Instructions</h2>
            </div>
            <div class="modal-body">
                <div class="container-fluid scroll">
                    <div class="row">

                        <div class="custom-pad" id="resume">
                            <object width="850" height="1150" data="/Assets/attachments/EMS Instructions.pdf"></object>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="tutorial" role="dialog">
    <div class="modal-dialog modal-lg custom-modal">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">EMS Tutorial</h2>
            </div>
            <div class="modal-body">
                <iframe id="tutorialVideo" width="600px" src="//www.youtube.com/embed/ebcSZz3bqiY" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


