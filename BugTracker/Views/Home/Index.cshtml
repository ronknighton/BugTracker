<!-- Pies -->
@{
    var ticketHelper = new TicketsHelper();
}
<div class="tile text-center">
    <div class="tile-dark p-15">
        <h4>All Project(s) Open Ticket Priorities</h4>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetOpenTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open Tickets</span>
        </div>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetCriticalTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open/Critical</span>
        </div>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetHigherTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open/Higher</span>
        </div>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetHighTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open/High</span>
        </div>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetMediumTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open/Medium</span>
        </div>
        <div class="pie-chart-tiny" data-percent=@ticketHelper.GetLowTickets()>
            <span class="percent"></span>
            <span class="pie-title">Open/Low</span>
        </div>
    </div>
</div>


<hr class="whiter" />
<div class="col-md-12 text-center">
    <h1>Welcome to Error Management Systems</h1>
    <div class="row">
        <button id="instructions" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">View/Download Instructions</button>
    </div>
    <div class="row">
        <button id="VideoTutorial" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#tutorial">View Tutorial Video</button>
    </div>
    @if (!User.Identity.IsAuthenticated)
    {
        <h3>No Data To Display-Please log in.</h3>
    }
</div>

